version: '3.1'
services:
   db:
     image: mysql:5.7
     secrets:
      - source: "test1"
        target: "test1"
        uid: "0"
        gid: "0"
        mode: 0444
      - source: "test2"
        target: "test2"
        uid: "0"
        gid: "0"
        mode: 0444
     environment:
       MYSQL_ROOT_PASSWORD_FILE: "/run/secrets/test1"
       MYSQL_DATABASE: wordpress
       MYSQL_USER: wordpress
       MYSQL_PASSWORD_FILE: "/run/secrets/test2"
     volumes:
      - wpsecret:/var/lib/mysql
      - wpsecret1:/run/secrets
     deploy:
       mode: replicated
       replicas: 1
       placement:
         constraints: [node.role == manager]
       restart_policy:
         condition: any

   wordpress:
     image: azcrig001cr001-on.azurecr.io/wp-engie:latest
     ports:
       - "80:80"
     depends_on:
       - db
     secrets:
       - source: "test2"
         target: "test2"
         uid: "0"
         gid: "0"
         mode: 0444
       - source: "test3"
         target: "test3"
         uid: "0"
         gid: "0"
         mode: 0444
     environment:
       WORDPRESS_DB_HOST: db:3306
       WORDPRESS_DB_USER: wordpress
       WORDPRESS_DB_DATABASE: wordpress
       WORDPRESS_DB_PASSWORD_FILE: "/run/secrets/test3"
     deploy:
       mode: replicated
       replicas: 1
       placement:
         constraints: [node.role == manager]
       restart_policy:
         condition: on-failure

volumes:
  wpsecret:
    external: true

volumes:
  wpsecret1:
    external: true

secrets:
  test1:
    external:
      name: "test1"
secrets:
  test2:
    external:
      name: "test2"

secrets:
  test3:
    external:
      name: "test3"
